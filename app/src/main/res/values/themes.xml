<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Purrytify" parent="android:Theme.Material.Light.NoActionBar" />
    
    <style name="Theme.Purrytify.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Purrytify</item>
    </style>

    <style name="Theme.Purrytify.Dialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>